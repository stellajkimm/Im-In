<div class="container">

<%= form_for @event, url: {action: "create"} do |f| %>


<table>
  <tr>
    <td><%= f.label :name, size: "400" %></td>
    <td><%= f.text_field :name %></td>
  </tr>
    <tr>
    <td><%= f.label :description %></td>
    <td><%= f.text_field :description %></td>
  </tr>
    <tr>
    <td><%= f.label :start_time %></td>
    <td><%= f.datetime_select :start_time %></td>
  </tr>
    <tr>
    <td><%= f.label :end_time %></td>
    <td><%= f.datetime_select :end_time %></td>
  </tr>
    <tr>
    <td><%= f.label :venue %></td>
    <td><%= f.text_field :venue %></td>
  </tr>
    <tr>
    <td><%= f.label :location %></td>
    <td><%= f.text_field :location %></td>
  </tr>
    <tr>
    <td><%= f.label :notify_user? %></td>
    <td><%= f.text_field :notify_user? %></td>
  </tr>
    <tr>
    <td><%= f.label :notify_hours_until_event %></td>
    <td><%= f.text_field :notify_hours_until_event %></td>
  </tr>

</table>
  <%= f.submit "submit", :class => 'button' %>

<% end %>

</div>
